{
  "name": "Django",
  "type": "python",
  "request": "launch",
  "stopOnEntry": false,
  "pythonPath": "${config.python.pythonPath}",
  "program": "${workspaceRoot}/manage.py",
  "args": [
      "runserver",
      "--no-color",
      "--noreload"
  ],
  "debugOptions": [
      "WaitOnAbnormalExit",
      "WaitOnNormalExit",
      "RedirectOutput",
      "DjangoDebugging"
  ]
}
